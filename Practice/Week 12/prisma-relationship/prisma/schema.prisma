generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String    // String? for optional field
  firstname String
  lastname  String
}

model Todos {
  id            Int       @id @default(autoincrement())
  title         String 
  description   String?   // optional
  done          Boolean   @default(false)
  userId        Int
}

